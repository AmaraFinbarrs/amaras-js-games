<main class="rock-paper-scissors container">
    <h2 class="text-left" >Computer Choice: <span id="computer-choice"></span></h2>
    <h2 class="text-left" >Your Choice: <span id="user-choice"></span></h2>
    <h2 class="text-left" >Result: <span id="result"></span></h2>

    <div class="buttons mt-5">
        <button id="rock" class="btn btn-primary">rock</button>
        <button id="paper" class="btn btn-primary" >paper</button>
        <button id="scissors" class="btn btn-primary" >scissors</button>
    </div>
</main>

<%= javascript_include_tag "rock-paper-scissors" %>